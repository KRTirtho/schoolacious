{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach Zainul(frontend)",
      "port": 9222,
      "request": "attach",
      "type": "pwa-chrome",
      "urlFilter": "http://localhost:3000/*",
      "webRoot": "${workspaceFolder}/zainul/src"
    },
    {
      "name": "Launch Zainul(frontend)",
      "request": "launch",
      "type": "pwa-chrome",
      "url": "http://localhost:3000",
      // use your own browser here if needed
      "runtimeExecutable": "/usr/lib/brave/brave",
      "webRoot": "${workspaceFolder}/zainul/src",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Titumir(backend) Debug",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeExecutable": "/home/krtirtho/.nvm/versions/node/v14.16.0/bin/node",
      "cwd": "${workspaceFolder}/titumir",
      "args": [
        "${workspaceFolder}/titumir/src/main.ts"
      ],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register"
      ],
      "sourceMaps": true,
      "protocol": "inspector",
      "outFiles": [
        "${workspaceFolder}/titumir/dist/*.js"
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Titumir NestJS WS Attach",
      "port": 9229,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceFolder}/titumir",
      "restart": true,
      "stopOnEntry": false,
      "protocol": "inspector",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/titumir/dist/*.js"
      ]
    }
  ]
}